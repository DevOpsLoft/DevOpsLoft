
  server {
    listen {{ WEB_HOST_SECURE_PORT }} ssl;
    server_name {{ PROD_APP_DOMAIN }};
    ssl_certificate     /etc/letsencrypt/live/{{ PROD_APP_DOMAIN }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ PROD_APP_DOMAIN }}/privkey.pem;
    location / {
      proxy_pass http://app:{{ APP_HOST_PORT }}/;
    }
  }


